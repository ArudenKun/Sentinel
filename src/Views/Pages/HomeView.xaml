<Page
  x:Class="Sentinel.Views.Pages.HomeView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
  xmlns:vmp="clr-namespace:Sentinel.ViewModels.Pages"
  Title="HomeView"
  Width="800"
  Height="450"
  d:DataContext="{d:DesignInstance vmp:HomeViewModel,
                                     IsDesignTimeCreatable=False}"
  mc:Ignorable="d"
>
  <Grid Margin="42" VerticalAlignment="Top">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <ui:Button
      Grid.Column="0"
      Command="{Binding CounterIncrementCommand, Mode=OneWay}"
      Content="Click me!"
      Icon="{ui:SymbolIcon Fluent24}"
    />
    <TextBlock
      Grid.Column="1"
      Margin="12,0,0,0"
      VerticalAlignment="Center"
      Text="{Binding Counter, Mode=OneWay}"
    />
  </Grid>
</Page>
